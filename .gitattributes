# Normalize line endings to LF
* text=auto eol=lf

# Python source code
*.py text eol=lf

# Configuration and data files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.env text eol=lf

# Templates and static files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.jinja2 text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.ps1 text eol=lf

# Git-related files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
